&GLOBAL
  PROJECT US_PROD
  PRINT_LEVEL LOW
  RUN_TYPE MD
  SEED {{ seed }}
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &SUBSYS
    &CELL
      ABC [angstrom] {{ box_xyz }}
      ALPHA_BETA_GAMMA {{ box_abc }}
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT pdb
      COORD_FILE_NAME {{ inpcrd }}
      CONNECTIVITY OFF
    &END TOPOLOGY
  &END SUBSYS
  &DFT
    CHARGE -1
    &QS
      METHOD XTB
      &SE
         &COULOMB
           CUTOFF [angstrom] 8.0
         &END
         &EXCHANGE
           CUTOFF [angstrom] 8.0
         &END
       &END
    &END QS
  &END DFT
&END FORCE_EVAL

&MOTION
  &MD
      ENSEMBLE NVT
      STEPS 1000
      TIMESTEP 1
      TEMPERATURE 298.15
      &THERMOSTAT
         TYPE NOSE
      &END THERMOSTAT
  &END MD
  &PRINT
    &TRAJECTORY                                 ! Controls the output of the trajectory
      FILENAME {{ nc }}
      FORMAT DCD                                ! Format of the output trajectory is DCD
    &END TRAJECTORY
    &RESTART                                    ! This section controls the printing of restart files
      &EACH                                     ! A restart file will be printed every 1001 md steps
        MD 1001
      &END
    &END RESTART
    &RESTART_HISTORY                            ! This section controls dumping of unique restart files during the run keeping all of them. Most useful if recovery is needed at a later point.
      &EACH                                     ! A restart file will be printed every 1001 md steps
        MD 1001
      &END
    &END RESTART_HISTORY
  &END PRINT
  &FREE_ENERGY
    &METADYN
      USE_PLUMED .TRUE.
      PLUMED_INPUT_FILE plumed.dat
    &END METADYN
  &END FREE_ENERGY
&END MOTION